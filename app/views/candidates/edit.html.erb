<h2>Edit Candidate</h2>

<%= form_for @candidate do |f| %>
  <%= f.label 'Election' %>
  <input type="text" value="<%= @candidate.election.name %>" disabled />
  <%= f.label :name %>
  <%= f.text_field :name %>
  <div class="form-actions">
    <%= f.submit 'Save', class: 'btn' %>
  </div>
<% end %>
