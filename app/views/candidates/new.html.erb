<h2>New Candidate</h2>

<%= form_for @candidate do |f| %>
  <%= f.label 'Election' %>
  <input type="hidden" name="election_id" value="<%= params[:election_id] %>" />
  <input type="text" value="<%= Election.find(params[:election_id]).name %>" disabled />
  <%= f.label :name %>
  <%= f.text_field :name %>
  <div class="form-actions">
    <%= f.submit 'Save', class: 'btn' %>
  </div>
<% end %>
