<%= link_to "Back", :elections, :class => 'btn' %>

<h2><%= @election.name %> (<%= @election.enabled? ? 'Enabled' : 'Disabled' %>)</h2>

<p><%= link_to "Edit", :edit_election, :class => 'btn' %> <%= link_to 'Delete', {action: 'destroy', id: @election.id}, :class => 'btn btn-danger', method: :delete, confirm: 'Are you sure?' %></p>

<h3>Eligibility</h3>
<ul>
  <li>Freshmen: <%= @election.freshmen_eligible ? 'Yes' : 'No' %></li>
  <li>Sophomores: <%= @election.sophomores_eligible ? 'Yes' : 'No' %></li>
  <li>Juniors: <%= @election.juniors_eligible ? 'Yes' : 'No' %></li>
  <li>Seniors: <%= @election.seniors_eligible ? 'Yes' : 'No' %></li>
</ul>

<p>Number of choices: <%= @election.num_choices %></p>

<h3>Candidates</h3>
<p><%= link_to "New", :new_candidate, :class => 'btn' %></p>
<ul>
  <% @election.candidates.order(:name).each do |candidate| %>
    <li><%= candidate.name %> <%= link_to 'Delete', {controller: 'candidates', action: 'destroy', id: candidate.id}, method: :delete, confirm: 'Are you sure?' %></li>
  <% end %>
</ul>

<h3>Results</h3>
<p>Sorted by votes</p>
<ul>
  <% @election.candidates.sort_by { |candidate| candidate.num_votes }.reverse.each do |candidate| %>
    <li><%= candidate.name %>: <%= candidate.num_votes %></li>
  <% end %>
</ul>
